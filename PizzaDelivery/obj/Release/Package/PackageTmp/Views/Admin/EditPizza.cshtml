
@{
    ViewBag.Title = "EditPizza";
    Layout = "~/Views/Shared/MainMasterLayOut.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.min.js"></script>
    <title>EditPizza</title>
</head>
<body>
    <div class="container">
        <form action="/Admin/AfterEdit/" method="POST" role="form">
            <legend>Edit Form of Pizza of #@Model.PizzaID - @Model.Title</legend>

            <div class="form-group">
                <label for="PizzaID">PizzaID</label>
                <input type="text" class="form-control" id="PizzaID" name="PizzaID" value="@Model.PizzaID" placeholder="PizzaID is number" readonly>
            </div>

            <div class="form-group">
                <label for="Title">Title</label>
                <input type="text" class="form-control" id="Title" name="Title" value="@Model.Title" placeholder="Title is text">
            </div>

            <div class="form-group">
                <label for="Category">Category</label>
                <input type="text" class="form-control" id="Category" name="Category" value="@Model.Category" placeholder="Category is veg or non-veg">
            </div>

            <div class="form-group">
                <label for="Description">Description</label>
                <input type="text" class="form-control" id="Description" name="Description" value="@Model.Description" placeholder="Description">
            </div>

            <div class="form-group">
                <label for="SmallPrice">Small Price</label>
                <input type="text" class="form-control" id="SmallPrice" name="SmallPrice" value="@Model.SmallPrice" placeholder="Small Price of pizza">
            </div>

            <div class="form-group">
                <label for="LargePrice">Large Price</label>
                <input type="text" class="form-control" id="LargePrice" name="LargePrice" value="@Model.LargePrice" placeholder="Large Price of pizza">
            </div>

            <div class="form-group">
                <label for="MediumPrice">Medium Price</label>
                <input type="text" class="form-control" id="MediumPrice" name="MediumPrice" value="@Model.MediumPrice" placeholder="Medium Price of pizza">
            </div>

            <button type="submit" class="btn btn-primary">Submit</button>


        </form>

    </div>
</body>
</html>

