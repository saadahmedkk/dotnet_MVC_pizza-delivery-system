
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.min.js"></script>
    <title>EditUser</title>
</head>
<body>
    <h1>Edit Form of User of #@Model.UserID - @Model.UserFirstName  as Role of : @Model.Role</h1> 
        <div class="container">

            <form action="/User/AfterEditUser/" method="POST" role="form">
                

                <div class="form-group">
                    <label for="UserID">UserID</label>
                    <input type="text" class="form-control" id="UserID" name="UserID" value="@Model.UserID" placeholder="UserID is Unique number" readonly>
                </div>

                <div class="form-group">
                    <label for="">First Name</label>
                    <input type="text" class="form-control" id="UserFirstName" name="UserFirstName" value="@Model.UserFirstName" placeholder="First Name">
                </div>

                <div class="form-group">
                    <label for="UserLastName">UserLastName</label>
                    <input type="text" class="form-control" id="UserLastName" name="UserLastName" value="@Model.UserLastName" placeholder="Last Name">
                </div>

                <div class="form-group">
                    <label for="Email">Email</label>
                    <input type="text" class="form-control" id="Email" name="Email" value="@Model.Email" placeholder="Email">
                </div>

                <div class="form-group">
                    <label for="Password">Password</label>
                    <input type="text" class="form-control" id="Password" name="Password" value="@Model.Password" placeholder="password">
                </div>

                <div class="form-group">
                    <label for="DOB"> DOB</label>
                    <input type="date" class="form-control" id="DOB" name="DOB" value="@Model.DOB" placeholder="DOB">
                </div>

                <div class="form-group">
                    <label for="Address">Medium Price</label>
                    <input type="text" class="form-control" id="Address" name="Address" value="@Model.Address" placeholder="Address">
                </div>

                <button type="submit" class="btn btn-primary">Submit</button>


            </form>

        </div>
    
</body>
</html>
