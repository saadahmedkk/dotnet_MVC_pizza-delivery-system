<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.min.js"></script>
    <title>@ViewBag.Title</title>
</head>
<body>
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
          <a class="navbar-brand" href="/home/index">PizzaStan</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
              <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                  <li class="nav-item">
                      <a class="nav-link active" aria-current="page" href="#">Orders</a>
                  </li>
                  <li class="nav-item">
                      <a class="nav-link" href="/user/details">Profile Details</a>
                  </li>
                  <li class="nav-item">
                      <a class="nav-link" href="/Admin/AdminPizza/">Admin Pizza Manager</a>
                  </li>
                
                  <li class="nav-item">
                      <a class="nav-link" href="/Home/ShowCart/">Cart</a>
                  </li>
                  <li class="nav-item">
                      <a class="nav-link" href="/UserAddress/Details/">Saved Addresses</a>
                  </li>

              </ul>
              <form class="d-flex" role="search">
                  <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                  <button class="btn btn-outline-success me-2" type="submit">Search</button>
                  <button class="btn btn-outline-success me-2" type="submit">Login/Signup</button>
                  <a class="nav-link" href="/Login/Signout/">SignOut</a>


              </form>
          </div>
        </div>
      </nav>
      <div class="container-fluid">
          <div class="row">
              <div class="col-md-9 mt-2" style="height: 100% ;text-align: center;">
                  @RenderBody()

              </div>
              <div class="col-md-3 mt-2" style="height: 100% ;text-align: center;">
                  @*<div class="col-md-3 mt-2" style="border: 1px solid black; height: 100%;text-align: center;">*@
                  <h1>Cart</h1>
                  <a href="/CheckOut/Details">Checkout</a>
                
              </div>

          </div>
      </div>
       
    
